<footer class="page-footer bg-color">
  <%if(theme.music.enable&&theme.music.fixed){ %> <%- partial('_widget/music')
  %> <% } %>
  <div
    class="container row center-align"
    style="margin-bottom: <% if (theme.time.enable) { %>15<% } else { %>0<% } %>px !important;"
  >
    <div class="copy-right">
      Copyright&nbsp;&copy;
      <span id="year"><%- theme.time.year %></span>
      <a href="<%- config.url %>" target="_blank"><%- config.author %></a>
      <% if (theme.icp.enable) { %>
      <span id="icp"
        ><img
          src="<%- theme.jsDelivr.url %>/medias/icp.png"
          style="vertical-align: text-bottom;"
        />
        <a href="<%- theme.icp.url %>" target="_blank"><%- theme.icp.text %></a>
      </span>
      <% } %> <% let socialClass = '' %> <% if (theme.busuanziStatistics &&
      theme.busuanziStatistics.enable) { %> <% socialClass = 'social-statis' %>
      <% } %>
    </div>
    <div class="col s12 m4 l4 social-link <%- socialClass %>">
      <%- partial('_partial/social-link') %>
    </div>
  </div>
</footer>

<div class="progress-bar"></div>
